{% set title = 'SnowTricks - Registration' %}
{% extends "base.html.twig" %}
{% block body %}
	<div class="form-sign col-12 col-sm-8 col-md-6 col-lg-5 col-xl-3 mx-auto ">
		<h1 class="text-center">Registration</h1>
		
		{{ form_start(registrationForm) }}
			<div class="form-group">
				{{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
			</div>
		    <button type="submit" class="btn btn-primary col-6 d-block mx-auto">Create an account</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}